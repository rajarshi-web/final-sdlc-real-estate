<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/head.ejs') %>

<body id="page-top">
    <div id="wrapper">
        <%- include('./layouts/sidebar.ejs') %>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('./layouts/topbar.ejs') %>

                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Team Management</h1>
                        <a href="/team-add" class="btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-plus fa-sm text-white-50"></i> Add Member
                        </a>
                    </div>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Our Team Members</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Photo</th>
                                            <th>Name</th>
                                            <th>Designation</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (members.length > 0) { %>
                                            <% members.forEach(member => { %>
                                                <tr>
                                                    <td class="text-center">
                                                        <img src="/uploads/<%= member.image %>" 
                                                             alt="profile" 
                                                             class="rounded-circle shadow-sm" 
                                                             style="width: 50px; height: 50px; object-fit: cover; border: 2px solid #4e73df;">
                                                    </td>
                                                    <td class="align-middle font-weight-bold"><%= member.name %></td>
                                                    <td class="align-middle"><%= member.post %></td>
                                                    <td class="align-middle">
                                                        <a href="/team-edit/<%= member._id %>" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                        <a href="/team/delete/<%= member._id %>" 
                                                           class="btn btn-danger btn-sm" 
                                                           onclick="return confirm('Remove this member?')">
                                                            <i class="fas fa-trash"></i> Delete
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="text-center">No team members found.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./layouts/footer.ejs') %>
        </div>
    </div>
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
</body>
</html>