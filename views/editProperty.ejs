<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/head.ejs') %>

<body id="page-top">
    <div id="wrapper">
        <%- include('./layouts/sidebar.ejs') %>
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('./layouts/topbar.ejs') %>

                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Edit Property Details</h6>
                        </div>
                        <div class="card-body">
                            <form action="/property-update/<%= property._id %>" method="POST" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Property Title</label>
                                        <input type="text" name="title" class="form-control" value="<%= property.title %>" required>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Price</label>
                                        <input type="text" name="price" class="form-control" value="<%= property.price %>" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Current Image</label><br>
                                    <img src="/uploads/<%= property.image %>" width="150" class="img-thumbnail mb-2">
                                    <input type="file" name="image" class="form-control-file">
                                </div>

                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea name="description" class="form-control" rows="4"><%= property.description %></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Update Property</button>
                                <a href="/" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./layouts/footer.ejs') %>
        </div>
    </div>
</body>
</html>