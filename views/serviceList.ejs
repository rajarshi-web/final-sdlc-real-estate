<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/head.ejs') %>

<body id="page-top">
    <div id="wrapper">
        <%- include('./layouts/sidebar.ejs') %>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('./layouts/topbar.ejs') %>

                <div class="container-fluid">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Service Management</h1>
                        <a href="/service-add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                            <i class="fas fa-plus fa-sm text-white-50"></i> Add New Service
                        </a>
                    </div>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">All Services</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Icon</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (services.length > 0) { %>
                                            <% services.forEach(service => { %>
                                                <tr>
                                                    <td class="text-center">
                                                        <i class="<%= service.iconClass %> fa-2x text-primary"></i>
                                                        <div class="small text-muted mt-1"><%= service.iconClass %></div>
                                                    </td>
                                                    <td class="font-weight-bold"><%= service.title %></td>
                                                    <td><%= service.description %></td>
                                                    <td>
                                                        <div class="d-flex">
                                                            <a href="/service-edit/<%= service._id %>" class="btn btn-warning btn-sm mr-2">
                                                                <i class="fas fa-edit"></i> Edit
                                                            </a>
                                                            <a href="/services/delete/<%= service._id %>" 
                                                               class="btn btn-danger btn-sm" 
                                                               onclick="return confirm('Delete this service?')">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4" class="text-center">No services found. Click "Add New Service" to get started.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./layouts/footer.ejs') %>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
</body>
</html>