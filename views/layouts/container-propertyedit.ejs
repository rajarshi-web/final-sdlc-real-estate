<div class="container-fluid">

  <div class="card shadow mb-4">
    <div class="card-body">
      <h4 class="text-success m-0 font-weight-bold">Edit Property</h4>
    </div>
  </div>

  <div class="card shadow mb-4">
    <div class="card-body">
      <form action="/property-update/<%= property._id %>" method="post" enctype="multipart/form-data">

          <div class="form-group col-lg-6">
            <label for="title">Property Name</label>
            <input type="text" class="form-control" name="title" value="<%= property.title %>" required>
          </div>

          <div class="form-group col-lg-6">
            <label for="type">Property Type</label>
            <select class="form-control" name="type">
              <% ["apartment", "house" , "villa" , "commercial" , "land" ].forEach(t=> { %>
                <option value="<%= t %>" <%=property.propertyType===t ? 'selected' : '' %> ><%=
                    t.charAt(0).toUpperCase() + t.slice(1) %>
                </option>
                <% }) %>
            </select>
          </div>

          <div class="form-group col-lg-4">
            <label for="price">Price ($)</label>
            <input type="number" class="form-control" name="price" value="<%= property.price %>" required>
          </div>

          <div class="form-group col-lg-4">
            <label for="city">City</label>
            <input type="text" class="form-control" name="city"
              value="<%= property.location ? property.location.city : '' %>">
          </div>

          <div class="form-group col-lg-4">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address"
              value="<%= property.location ? property.location.address : '' %>">
          </div>

          <div class="form-group col-lg-12">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="5"
              class="form-control"><%= property.description %></textarea>
          </div>

          <div class="form-group col-lg-12">
            <label>Upload New Images (Replacing existing ones)</label>
            <input type="file" name="images" class="form-control-file" multiple>
          </div>
        </div>

        <div class="mb-3">
          <label>Current Images:</label>
          <div class="d-flex flex-wrap">
            <% if (property.images && property.images.length> 0) { %>
              <% property.images.forEach(img=> { %>
                <img src="/uploads/<%= img %>" alt="Property Image" width="100" height="100"
                  style="margin: 5px; border:1px solid #ddd; border-radius:5px; object-fit: cover;">
                <% }) %>
                  <% } else { %>
                    <p class="text-muted">No images uploaded.</p>
                    <% } %>
          </div>
        </div>

        <button type="submit" class="btn btn-success">Update Property</button>
        <a href="/property-list" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>

</div>