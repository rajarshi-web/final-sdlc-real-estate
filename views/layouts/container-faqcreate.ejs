<div class="container-fluid">
    <div class="card shadow px-2 py-2 mb-4">
        <h4 class="text-primary m-0 font-weight-bold">Add New FAQ</h4>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">FAQ Details</h6>
        </div>
        <div class="card-body">
            <form action="/faqs/add" method="POST">
                <div class="form-row">
                    <div class="form-group col-lg-12">
                        <label class="font-weight-bold">Question</label>
                        <input type="text" class="form-control" name="question" placeholder="Enter the FAQ question" required>
                    </div>

                    <div class="form-group col-lg-12">
                        <label class="font-weight-bold">Answer</label>
                        <textarea name="answer" rows="6" class="form-control" placeholder="Provide the detailed answer here..." required></textarea>
                    </div>

                    <div class="form-group col-lg-4">
                        <label class="font-weight-bold">Status</label>
                        <select class="form-control" name="status">
                            <option value="true">Active (Visible)</option>
                            <option value="false">Inactive (Hidden)</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary shadow-sm">
                         Save FAQ
                    </button>
                    <a href="/api/faq-list" class="btn btn-secondary shadow-sm">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>