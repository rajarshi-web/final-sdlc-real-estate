<!DOCTYPE html>
<html lang="en">
<%- include('./layouts/head.ejs') %>

<body id="page-top">
    <div id="wrapper">
        <%- include('./layouts/sidebar.ejs') %>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <%- include('./layouts/topbar.ejs') %>

                <div class="container-fluid">
                    <div class="card shadow px-2 py-2 mb-4">
                        <h4 class="text-warning m-0 font-weight-bold">Edit FAQ</h4>
                    </div>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-white">
                            <h6 class="m-0 font-weight-bold text-primary">Modify FAQ Details</h6>
                        </div>
                        <div class="card-body">
                            <form action="/faqs/update/<%= faq._id %>" method="POST">
                                <div class="form-row">
                                    <div class="form-group col-lg-12">
                                        <label class="font-weight-bold text-dark">Question</label>
                                        <input type="text" 
                                               class="form-control" 
                                               name="question" 
                                               value="<%= faq.question %>" 
                                               required>
                                    </div>

                                    <div class="form-group col-lg-12">
                                        <label class="font-weight-bold text-dark">Answer</label>
                                        <textarea name="answer" 
                                                  rows="6" 
                                                  class="form-control" 
                                                  required><%= faq.answer %></textarea>
                                    </div>

                                    <div class="form-group col-lg-4">
                                        <label class="font-weight-bold text-dark">Status</label>
                                        <select class="form-control" name="status">
                                            <option value="true" <%= faq.status === true ? 'selected' : '' %>>Active (Visible)</option>
                                            <option value="false" <%= faq.status === false ? 'selected' : '' %>>Inactive (Hidden)</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mt-4 border-top pt-3">
                                    <button type="submit" class="btn btn-warning shadow-sm px-4">
                                        <i class="fas fa-save fa-sm text-white-50"></i> Update FAQ
                                    </button>
                                    <a href="/faq-list" class="btn btn-secondary shadow-sm px-4 ml-2">
                                        Cancel
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            <%- include('./layouts/footer.ejs') %>
        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
</body>
</html>